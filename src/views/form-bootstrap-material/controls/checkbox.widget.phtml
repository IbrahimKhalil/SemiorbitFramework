		<div class="checkbox">
			<label>
				<input type="checkbox" <?= $field->InputAttrs() ?>   title="<?=  htmlspecialchars( $field->LabelText() ?? '') ?>"
                       <?=$checked_html?> onclick="if(this.checked){this.value='1';}else{this.value='0';}" >
				&nbsp; <?= htmlspecialchars( $field->LabelText() ?? '') ?>
			</label>
		</div>
	</div>
	<?= $myTemplate->CloseInput( $field ) ?>

	<?= $myTemplate->OpenNote( $field ) . ( $field->Note ) . $myTemplate->CloseNote( $field ) ?>

