$myTemplate = $field->ActiveTemplate();

$checked_html = (bool) $field->Value == true?  'checked value="1"' : 'value="0"';

?>


<?= $myTemplate->OpenField( $field ) ?>

	<?= $myTemplate->OpenLabel( $field ) . $myTemplate->CloseLabel( $field )?>

	<?= $myTemplate->OpenInput( $field ) ?>
